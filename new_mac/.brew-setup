#!/usr/bin/env bash

# Ask for the administrator password upfront.
sudo -v

# Keep-alive: update existing `sudo` time stamp until the script has finished.
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

# Make sure weâ€™re using the latest Homebrew.
brew update

# Upgrade any already-installed formulae.
brew upgrade --all

###############################################################################
echo "Install command-line tools"                                       			#
###############################################################################

# Install GNU core utilities (those that come with OS X are outdated).
# Add to .bashrc: export PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"
brew install coreutils
sudo ln -s /usr/local/bin/gsha256sum /usr/local/bin/sha256sum

# Install some other useful utilities like `sponge`.
brew install moreutils

# Install GNU `find`, `locate`, `updatedb`, and `xargs`, `g`-prefixed.
brew install findutils

# Install GNU `sed`, overwriting the built-in `sed`.
brew install gnu-sed --with-default-names

# Install Bash 4.
brew install bash
brew tap homebrew/versions
brew install bash-completion2

# Set up the new bash as default shell
sudo bash -c 'echo /usr/local/bin/bash >> /etc/shells'
chsh -s /usr/local/bin/bash


###############################################################################
echo "Install more recent versions of some OS X tools."												#
###############################################################################

brew install vim --override-system-vi
brew install homebrew/dupes/grep
brew install homebrew/dupes/openssh


###############################################################################
echo "Install other useful binaries."																					#
###############################################################################

brew install git 
brew install ack
brew install curl
brew install tree
brew install speedtest_cli
brew install node

# https://github.com/stevemao/diff-so-fancy
npm install -g diff-so-fancy

###############################################################################
echo "Remove outdated versions from the cellar."															#
###############################################################################

brew cleanup
